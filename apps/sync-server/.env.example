# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/euplan
# Alternative database URL (optional)
POSTGRES_URL=postgresql://username:password@localhost:5432/euplan

# Security (REQUIRED)
# Generate a secure random string with at least 32 characters
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars

# CORS Origins (comma-separated list)
# In development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# In production (replace with your domains)
# ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Performance Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
WS_SAVE_INTERVAL=5000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=false