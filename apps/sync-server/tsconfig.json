{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/.pnpm/drizzle-orm*/node_modules/drizzle-orm/mysql*/**",
    "**/node_modules/.pnpm/drizzle-orm*/node_modules/drizzle-orm/singlestore/**",
    "**/node_modules/.pnpm/drizzle-orm*/node_modules/drizzle-orm/sqlite*/**"
  ]
}